<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(@user) do |f| %>

	 <h1>User info</h1>
    
     <h4>Name</h4>
        <%= f.text_field :username, autofocus: true,  placeholder:"Name" %>

    
    <h4>image</h4>
      <%= f.attachment_field :profile_image, placeholder: "image", class: "user-edit-form" %>


    <h4>Introduction</h4>
      <%= f.text_area :introduction, class: "introduction" %>
	  <%= f.submit 'Update Book' %>

<% end %>