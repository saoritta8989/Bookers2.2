
<div class="container">
    <div class="row">

<div class="col-md-3">
  <%= flash[:notice] %>


	<h2>User info</h2>

   <%= attachment_image_tag user, :profile_image, class: "user_image", fallback: "t2AdqcaA.jpeg", :size =>'100x100' %>
　　<table class ="table">
		<tbody>
			<tr>
				<th>name</th>
				<th><%= user.username %></th>
			</tr>
            <tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
			</tr>
		</tbody>
	</table>

 <%= link_to "", edit_user_path(user.id), class: "edit_user_#{user.id} col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

<br>
<br>


<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>New book</h2>
<!-- form_for -->
<%= form_for(book) do |f| %>

  <h4>title</h4>
  <%= f.text_field :title, class: "book_title", :size => '35' %>

  <h4>option</h4>
  <%= f.text_area :body, class: "book_body", :size => '35' %>
  <%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary" %>

<% end %>
</div>