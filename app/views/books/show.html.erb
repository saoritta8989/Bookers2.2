
	<%= render 'books/list', book: @book, user: current_user %>

<div class="col-md-9">

<h1>Book deteal</h1>

<table class="table table-striped">
	<tbody>
		<tr>
			<td><%= attachment_image_tag current_user, :profile_image, class: "user_image", fallback: "t2AdqcaA.jpeg", :size =>'30x30' %></td>
　　　　　　　<td><%= @books.title %></td>
			<td><%= @books.body %></td>
			<% if @books.user == current_user %>
			<td><%= link_to "Edit" ,edit_book_path(@books.id) ,class: "edit_#{@books.id} btn btn-success dropdown-toggle" %></td>
			<td><%= link_to "Destroy", book_path(@books.id), method: :delete ,class: "destroy_book_#{@books.id} btn btn-danger dropdown-toggle", "data-confirm" => "本当に削除しますか？" %></td>
		</tr>
	  <% end %>
	</tbody>
</table>
<%= link_to @books.user.username,user_path(@books.user) %>
</div>
</div>