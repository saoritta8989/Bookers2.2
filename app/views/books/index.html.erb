
	<%= render 'books/list', book: @book, user: @user %>



<div class="col-md-9">

<h1>Books</h1>

<table class= "table table-striped">
	<thead>
	<tr>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
	</tr>
  </thead>

<% @books.each do |book| %>
  <tbody>
		<tr>
			<td><%= attachment_image_tag book.user, :profile_image, class: "user_image", fallback: "t2AdqcaA.jpeg", :size =>'30x30' %></td>
			<td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %>  
           </td>
			<td><%= book.body %></td>

		</tr>
	</tbody>
	<% end %>
</table>
</div>
</div>
</div>
